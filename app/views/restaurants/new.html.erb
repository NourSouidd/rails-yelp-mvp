
<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>

      <%= f.input :address %>

      <%= f.input :category, collection: ['Chinese', 'Italian', 'Japanese', 'French', 'Belgian'] %>

      <%= f.input :phone_number %>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>


<%= link_to 'Back to list', restaurants_path %>

</div>
