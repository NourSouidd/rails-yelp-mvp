<div class="container p-4">
  <h1><%= @restaurant.name %><h1>


  <h6> <strong>Category:</strong>  <%= @restaurant.category.capitalize %></h6><p></p>

  <h6><strong>Address:</strong>   <%= @restaurant.address %></h6>

  <% num = @restaurant.phone_number %>
  <% unless num.nil?  %>
    <h6>Contact:</h6>
    <p><%= num %></p>

  <% end %>

<br>
  <h6><strong>Reviews:</strong></h6>
      <% @restaurant.reviews.each do |review| %>
        <div class="card  m-1" style="width: 34rem;">
          <div class="card-body d-flex justify-content-between">
            <p><%= review.content %></p>
            <p><%= review.rating %></p>
          </div>

        </div>
      <% end %>

<div class="d-flex justify-content-between p-3">
  <p><%= link_to "Leave a Review", new_restaurant_review_path(@restaurant) %></p>
  <p><%= link_to 'Back to list', restaurants_path %></p>
</div>
</div>

